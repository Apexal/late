{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "standard",
    "plugin:vue/recommended"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-multiple-empty-lines": [
      1,
      {
        "max": 2,
        "maxEOF": 1
      }
    ],
    "no-trailing-spaces": [
      1,
      {
        "skipBlankLines": false
      }
    ],
    "no-mixed-spaces-and-tabs": [
      1
    ],
    "no-unused-vars": [
      1,
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "no-console": [
      1,
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "vue/component-name-in-template-casing": [
      "error",
      "PascalCase",
      {
        "ignores": [
          "router-view",
          "router-link",
          "transition",
          "transition-group",
          "keep-alive",
          "vue-progress-bar"
        ]
      }
    ],
    "vue/script-indent": "error",
    "vue/no-spaces-around-equal-signs-in-attribute": "error",
    "vue/no-unused-components": "off",
    "vue/no-unused-vars": 1
  },
  "parserOptions": {
    "parser": "babel-eslint"
  }
}
extends /template

block content
  section.section
    .container
      h1.title Account Setup
      
      nav.breadcrumb
        ul
          each item, check in user.setup
            if user.setup.hasOwnProperty(check) && check !== '$init'
              li
                a(href='/setup/'+check)
                  //- TODO: clean this up
                  span(style='text-transform: capitalize;')= check.split('_').join(' ')
                  span.icon.is-small
                  if item
                    i.fas.fa-check
                  else
                    i.fas.fa-times
